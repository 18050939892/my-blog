// 这个替代featuredPosts
function slugify(text: string): string {
    return text
        .toString()
        .toLowerCase()
        .trim()
        .replace(/\s+/g, '-')       // 替换空格为 -
        .replace(/&/g, '-and-')     // 替换 & 为 'and'
        .replace(/[^\w\-]+/g, '')   // 移除非单词字符
        .replace(/\-\-+/g, '-');    // 替换多个 - 为单个 -
}
